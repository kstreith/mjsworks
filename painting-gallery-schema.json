{
    "type": "object",
    "properties": {
        "template": { "type": "string", "enum": ["paintinggallery.html"] },
        "title": { "type": "string", "maxLength": 50, "title": "Shown in Google and Facebook results, Browser Title bar" },
        "description": { "type": "string", "maxLength": 200, "title": "Longer description" },
        "series": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,                            
                "required": ["title", "id","photos"],                      
                "properties": {
                    "title": { "type": "string"},
                    "id": { "type": "string"},
                    "photos": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,                            
                            "required": ["file", "title","size"],
                            "properties": {
                                "file": { "type": "string"},
                                "title": { "type": "string"},
                                "size": { "type": "string"},
                                "price": { "type": "number"},
                                "sold": { "type": "boolean"}
                            }
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["template", "title","description","series"]
}